<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note"
    android:orientation="vertical"
    tools:context=".KatakanaActivity">

    <TextView
        android:id="@+id/txtKata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="문제"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btnKatasub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="정답 확인" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <ImageView
        android:visibility="invisible"
        android:id="@+id/imgCorrect"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/jeongdap" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/imgOdap"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/odap" />

    <EditText
        android:id="@+id/editKata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="답 입력"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnKatastart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종결과 확인"
            android:textSize="20sp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/btnKatahome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</LinearLayout>